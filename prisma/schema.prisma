datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongodb"]
}

model Customer {
  id        String   @id @default(dbgenerated()) @map("_id") @db.ObjectId
  email     String   @unique
  createdAt DateTime @default(now())
}
